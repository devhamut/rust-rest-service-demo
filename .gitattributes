# Auto detect text files and perform LF normalization
* text=auto

# Java source files should always use LF
*.java text eol=lf
*.groovy text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf
*.json text eol=lf

# Rust source files should always use LF
*.rs text eol=lf

# Javascript source files should always use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Shell scripts should use LF
*.sh text eol=lf
/gradlew text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files should not be touched
*.jar binary
*.class binary
*.war binary
*.zip binary
*.tar binary
*.gz binary
*.p12 binary
*.jks binary
*.keystore binary
*.truststore binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
